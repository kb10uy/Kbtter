<Window x:Class="KbtterWPF.AuthorizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="認証" Height="160" Width="320" ResizeMode="NoResize"
        Closed="Window_Closed"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="ブラウザで認証して表示された番号を入力してください" Grid.Row="0"/>
        <TextBox Name="PINCode" Grid.Row="1" FontSize="32"/>
        <Button Name="PINOK" Grid.Row="2" Content="OK" FontSize="36" Click="PINOK_Click"/>
    </Grid>
</Window>
